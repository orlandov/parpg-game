  <Button name="saveButton"    text="Save Game"   position="25,53" min_size="95,20" max_size="95,20"/>
  <Button name="loadButton"    text="Load Game"   position="25,76"  min_size="95,20" max_size="95,20"/>
  <Button name="optionsButton" text="Options"     position="25,99" min_size="95,20" max_size="95,20"/>
  <Button name="helpButton"    text="Help"        position="25,122" min_size="95,20" max_size="95,20" />
