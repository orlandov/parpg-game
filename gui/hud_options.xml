<Window title="PARPG Options" position_technique="center:center"
	min_size="300,300" max_size="350,450">

  <CheckBox name="FullscreenBox" text="Full Screen" />
  <CheckBox name="SoundsBox" text="Play Sounds" />
  <Label name="InitialVolumeLabel" />
  <Slider name="InitialVolumeSlider" scale_start="0" scale_end="10" />
  <HBox min_size="120,90">
    <Label text="Resolution: " />
    <ListBox name="ResolutionBox" min_size="120,0" max_size="200,150" />
    <Spacer />
  </HBox>
  <HBox min_size="120,47">
    <Label text="Render Backend: " />
    <ListBox name="RenderBox" min_size="120,0" />
    <Spacer />
  </HBox>

  <Spacer />

  <HBox min_size="290,25" max_size="290,25">
    <Button name="closeButton" text="Close" />
    <Spacer />
    <Button name="defaultsButton" text="Reset to Defaults" />
    <Button name="applyButton" text="Apply" />
  </HBox>
</Window>
